@model DormitoryManagement.ViewModels.EditRoomViewModel
@using DormitoryManagement.Enums
@{
    ViewBag.Title = "EditRoom";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-2 mb-2">
    <h5 class="card-header">Thông tin phòng</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.RoomId)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.RoomName)
                @Html.EditorFor(model => model.RoomName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomName, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Homefleet)
                    @Html.DropDownListFor(model => model.Homefleet, ViewBag.homefleets as List<SelectListItem>, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Homefleet, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.ForGender)
                    @Html.DropDownListFor(model => model.ForGender, new SelectList(Enum.GetValues(typeof(EnumGender))), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ForGender, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.BedNumber)
                    @Html.EditorFor(model => model.BedNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BedNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Included)
                @Html.TextAreaFor(model => model.Included, new { @class = "form-control", @rows = "5" })
                @Html.ValidationMessageFor(model => model.Included, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu thông tin phòng" class="btn btn-warning" />
                </div>
            </div>
        }
    </div>
</div>
