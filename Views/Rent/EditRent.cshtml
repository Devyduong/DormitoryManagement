@model DormitoryManagement.Models.Rent
@{
    ViewBag.Title = "EditRent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles
{
    <link href="~/Content/vendor/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Content/vendor/axios/axios.min.js"></script>
    <script src="~/Content/js/notify.js"></script>
    <script src="~/Content/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

}
<a href="/Rent/RentManage" class="btn btn-success mb-2">Trở về trang danh sách</a>

<div class="card">
    <h5 class="card-header">Chỉnh sửa thông tin thuê phòng</h5>
    <div class="card-body">
        <form>
            <input type="hidden" value="@Model.ID" id="idR" />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <fieldset disabled>
                        <label for="student">Sinh viên thuê phòng</label>
                        <input type="text" value="@Model.Renter" class="form-control" />
                    </fieldset>
                </div>
                <div class="form-group col-md-4">
                    <label for="homefleet">Tòa nhà</label>
                    <select id="homefleet" class="form-control">
                        @foreach (var it in ViewBag.homefleets)
                        {
                            if (it.HFID == Model.Homefleet)
                            {
                                <option value="@it.HFID" selected>@it.HFName</option>
                            }
                            else
                            {
                                <option value="@it.HFID">@it.HFName</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="room">Phòng</label>
                    <select id="room" class="form-control">
                        @foreach (var it in ViewBag.rooms)
                        {
                            if (it.RoomId == Model.Room)
                            {
                                <option value="@it.RoomId" selected>@it.RoomName</option>
                            }
                            else
                            {
                                <option value="@it.RoomId">@it.RoomName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="startdate">Ngày bắt đầu</label>

                    <div class="input-group date">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        <input type="text" class="form-control pull-right" id="startdate" value="@Model.StartDate" />
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group col-md-6">
                    <label for="enddate">Ngày hết hạn phòng</label>

                    <div class="input-group date">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        <input type="text" class="form-control pull-right" id="enddate" value="@Model.EndDate" />
                    </div>
                    <!-- /.input group -->
                </div>
            </div>


        </form>
        <button class="btn btn-warning mt-2" onclick="updateRent()">Lưu lại</button>
        <a href="/Rent/RentManage" class="btn btn-dark mt-2">Hủy</a>
    </div>
</div>

@section jscode{
    <script>
        // Set dateTime picker
        $(function () {
            //Date cmnd
            $('#startdate').datepicker({
                autoclose: true
            });

            //Date of birth
            $('#enddate').datepicker({
                autoclose: true
            });
        })

        $('#homefleet').change(function () {
            var id = $('#homefleet').val();
            loadRooms(id);
        });

        function loadRooms(hfId) {
            $('#room').empty();
            axios({
                method: 'get',
                url: 'getRoomsByHomefleetId?hfId=' + hfId
            })
                .then((response) => {
                    console.log(response);
                    var array = response.data;
                    console.log(array);
                    if (array != '') {
                        for (i in array) {
                            $("#room").append("<option value='" + array[i].RoomId + "' > " + array[i].RoomName + "</option > ");
                        }
                    }
                })
                .catch((exception) => {
                    console.log(exception);
                });
        }

        function updateRent() {
            var id = $('#idR').val();
            var homefleet = $('#homefleet').val();
            var room = $('#room').val();
            var startdate = $('#startdate').val();
            var enddate = $('#enddate').val();

            axios({
                method: 'post',
                url: '/Rent/UpdateRent',
                data: {
                    model: {
                        ID: id,
                        HomeFleet: homefleet,
                        Room: room,
                        StartDate: startdate,
                        EndDate: enddate
                    }
                }
            }).then((response) => {
                window.location.replace('/Rent/RentManage');
            }).catch((exception) => {
                console.log(exception);
            });
        }
    </script>
}